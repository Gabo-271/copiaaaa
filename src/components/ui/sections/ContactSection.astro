<section id="contact" class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full scroll-mt-20">
    <div class="mx-auto max-w-2xl text-center mb-10 lg:mb-14">
        <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight">
            Contáctanos
        </h2>
        <p class="mt-4 text-pretty text-neutral-600 dark:text-neutral-400">
            ¿Tienes preguntas? Estamos aquí para ayudarte
        </p>
    </div>

    <div class="max-w-5xl mx-auto">
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
            <!-- Email -->
            <a 
                class="group flex flex-col bg-neutral-100 dark:bg-blue-900/40 rounded-xl shadow-md dark:shadow-white/20 hover:shadow-xl dark:hover:shadow-white/30 transition-all duration-300 p-5"
                href="mailto:admision@utem.cl"
            >
                <div class="flex items-start gap-4">
                    <svg class="flex-shrink-0 size-6 text-neutral-600 group-hover:text-green-500 dark:text-neutral-300 dark:group-hover:text-green-400 transition-colors" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"/>
                        <path d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10"/>
                    </svg>
                    <div>
                        <h3 class="font-bold text-neutral-800 group-hover:text-green-500 dark:text-neutral-200 dark:group-hover:text-green-400 transition-colors">
                            Email
                        </h3>
                        <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
                            admision@utem.cl
                        </p>
                    </div>
                </div>
            </a>

            <!-- WhatsApp -->
            <a 
                class="group flex flex-col bg-neutral-100 dark:bg-blue-900/40 rounded-xl shadow-md dark:shadow-white/20 hover:shadow-xl dark:hover:shadow-white/30 transition-all duration-300 p-5"
                href="https://wa.me/56912345678"
                target="_blank"
                rel="noopener noreferrer"
            >
                <div class="flex items-start gap-4">
                    <svg class="flex-shrink-0 size-6 text-neutral-600 group-hover:text-green-500 dark:text-neutral-300 dark:group-hover:text-green-400 transition-colors" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
                    </svg>
                    <div>
                        <h3 class="font-bold text-neutral-800 group-hover:text-green-500 dark:text-neutral-200 dark:group-hover:text-green-400 transition-colors">
                            WhatsApp
                        </h3>
                        <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
                            +56 9 1234 5678
                        </p>
                    </div>
                </div>
            </a>

            <!-- Instagram -->
            <a 
                class="group flex flex-col bg-neutral-100 dark:bg-blue-900/40 rounded-xl shadow-md dark:shadow-white/20 hover:shadow-xl dark:hover:shadow-white/30 transition-all duration-300 p-5"
                href="https://instagram.com/utem.cl"
                target="_blank"
                rel="noopener noreferrer"
            >
                <div class="flex items-start gap-4">
                    <svg class="flex-shrink-0 size-6 text-neutral-600 group-hover:text-green-500 dark:text-neutral-300 dark:group-hover:text-green-400 transition-colors" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
                        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                        <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
                    </svg>
                    <div>
                        <h3 class="font-bold text-neutral-800 group-hover:text-green-500 dark:text-neutral-200 dark:group-hover:text-green-400 transition-colors">
                            Instagram
                        </h3>
                        <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
                            @utem.cl
                        </p>
                    </div>
                </div>
            </a>

            <!-- Facebook -->
            <a 
                class="group flex flex-col bg-neutral-100 dark:bg-blue-900/40 rounded-xl shadow-md dark:shadow-white/20 hover:shadow-xl dark:hover:shadow-white/30 transition-all duration-300 p-5"
                href="https://facebook.com/utem.cl"
                target="_blank"
                rel="noopener noreferrer"
            >
                <div class="flex items-start gap-4">
                    <svg class="flex-shrink-0 size-6 text-neutral-600 group-hover:text-green-500 dark:text-neutral-300 dark:group-hover:text-green-400 transition-colors" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                    </svg>
                    <div>
                        <h3 class="font-bold text-neutral-800 group-hover:text-green-500 dark:text-neutral-200 dark:group-hover:text-green-400 transition-colors">
                            Facebook
                        </h3>
                        <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
                            /utem.cl
                        </p>
                    </div>
                </div>
            </a>

            <!-- Teléfono -->
            <a 
                class="group flex flex-col bg-neutral-100 dark:bg-blue-900/40 rounded-xl shadow-md dark:shadow-white/20 hover:shadow-xl dark:hover:shadow-white/30 transition-all duration-300 p-5"
                href="tel:+56227877500"
            >
                <div class="flex items-start gap-4">
                    <svg class="flex-shrink-0 size-6 text-neutral-600 group-hover:text-green-500 dark:text-neutral-300 dark:group-hover:text-green-400 transition-colors" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                    </svg>
                    <div>
                        <h3 class="font-bold text-neutral-800 group-hover:text-green-500 dark:text-neutral-200 dark:group-hover:text-green-400 transition-colors">
                            Teléfono
                        </h3>
                        <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
                            +56 2 2787 7500
                        </p>
                    </div>
                </div>
            </a>

            <!-- Ubicación -->
            <a 
                class="group flex flex-col bg-neutral-100 dark:bg-blue-900/40 rounded-xl shadow-md dark:shadow-white/20 hover:shadow-xl dark:hover:shadow-white/30 transition-all duration-300 p-5"
                href="https://maps.google.com/?q=UTEM"
                target="_blank"
                rel="noopener noreferrer"
            >
                <div class="flex items-start gap-4">
                    <svg class="flex-shrink-0 size-6 text-neutral-600 group-hover:text-green-500 dark:text-neutral-300 dark:group-hover:text-green-400 transition-colors" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                        <circle cx="12" cy="10" r="3"/>
                    </svg>
                    <div>
                        <h3 class="font-bold text-neutral-800 group-hover:text-green-500 dark:text-neutral-200 dark:group-hover:text-green-400 transition-colors">
                            Ubicación
                        </h3>
                        <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
                            Santiago, Chile
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>
